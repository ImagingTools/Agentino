schema {
	query: Query
	mutation: Mutation
	namespace: agentino
	version: 1.0
}

type Link {
	id: ID!
}

enum ServiceStatus {
	UNDEFINED
	RUNNING
	NOT_RUNNING
}

type Service {
	id: ID!
	agentId: ID!
	x: Double
	y: Double
	width: Integer
	mainText: String
	secondText: String
	thirdText: String
	icon1: String
	icon2: String
	status: ServiceStatus
	links: [Link]
	selected: Boolean
	hasError: Boolean
	isComposite: Boolean
}

type Topology {
	services: [Service]
}

type SaveTopologyResponse {
	successful: Boolean!
}

type Query {
	GetTopology: Topology!
}

type Mutation {
	SaveTopology (input: Topology): SaveTopologyResponse!
}

